<%= form_tag("/hashtags", method: "get") do %>
  <%= label_tag(:q, "Snoop for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Snoop") %>
<% end %>

<% if defined?(@results) %>

  <% @results.each do |key, value| %>
    <div class="hashtags">
      #<%= key.capitalize %>: <%= value %>
    </div>
  <% end %>

<% end %>
